<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_start_10"
    android:layout_marginTop="@dimen/margin_top_10"
    android:layout_marginEnd="@dimen/margin_end_10"
    android:background="@drawable/rectangle_corner_border_gray"
    android:paddingBottom="@dimen/margin_bottom_20">

    <RelativeLayout
        android:id="@+id/relProfile"
        android:layout_width="@dimen/txt_profile_completion_medical_box_width"
        android:layout_height="@dimen/txt_profile_completion_medical_box_height"
        android:layout_marginStart="@dimen/margin_start_20"
        android:layout_marginTop="@dimen/margin_top_20"
        android:background="@drawable/round_bg_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgMedical"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerInParent="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_start_20"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/relProfile"
        app:layout_constraintTop_toTopOf="@+id/relProfile">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Scarlett George"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text=" August 20, 2020"
            android:textColor="@color/colorGray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text=" scarlettgeorge@gmail.com"
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_10"
            android:fontFamily="@font/roboto_medium"
            android:text=" Adidas's gift value packed 50% OFF far every pack."
            android:textColor="@color/colorBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_20"
            android:fontFamily="@font/roboto_regular"
            android:text=" NHJSK8997"
            android:textColor="@color/colorRed"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top_20"
            android:background="@drawable/round_corner_orange_bg"
            android:drawableStart="@drawable/ic_tick_white"
            android:drawablePadding="@dimen/margin_start_10"
            android:padding="@dimen/margin_start_5"
            android:text="Referred"
            android:paddingEnd="@dimen/margin_end_20"
            android:textColor="@color/colorWhite" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>