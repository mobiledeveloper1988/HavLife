<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_top_15">

    <TextView
        android:id="@+id/txtIntakeHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oats Vegetable Roti"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/margin_top_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txtIntakeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.0 piece"
        android:textSize="12sp"
        android:textColor="@color/colorGray"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtIntakeHead"/>

    <ImageView
        android:id="@+id/imgDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_3_dot"
        android:layout_marginEnd="@dimen/margin_end_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="246.7 Cal"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginEnd="@dimen/margin_end_20"
        app:layout_constraintTop_toTopOf="@+id/txtIntakeHead"
        app:layout_constraintEnd_toStartOf="@+id/imgDot"/>
</androidx.constraintlayout.widget.ConstraintLayout>