<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginStart="@dimen/margin_start_10"
    android:layout_marginTop="@dimen/margin_top_10"
    android:layout_marginEnd="@dimen/margin_end_10"
    android:background="@drawable/rectangle_corner"
    android:paddingBottom="@dimen/margin_top_5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adidas's gift value packed 50% OFF far every pack."
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/roboto_regular"
        android:layout_margin="@dimen/margin_bottom_20"
        app:layout_constraintBottom_toTopOf="@+id/view" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_top_20"
        android:layout_marginBottom="@dimen/margin_bottom_10"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/txtStartNow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtStartNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end_20"

        android:layout_marginBottom="@dimen/margin_bottom_10"
        android:drawableEnd="@drawable/ic_arrow_forward"
        android:drawablePadding="@dimen/margin_start_10"
        android:fontFamily="@font/roboto_regular"
        android:text="Start Now"
        android:textAllCaps="true"

        android:textColor="@color/colorYellow"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>